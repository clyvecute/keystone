# Cloud Provider Configuration
# GCP
GCP_PROJECT_ID=your-project-id
GCP_REGION=us-central1
GCP_ZONE=us-central1-a

# AWS (alternative)
# AWS_REGION=us-east-1
# AWS_ACCOUNT_ID=123456789012

# Terraform Backend
TF_STATE_BUCKET=keystone-terraform-state
TF_STATE_PREFIX=terraform/state

# Application Configuration
APP_NAME=configra
APP_ENV=dev
APP_PORT=8080

# Database (if needed)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=configra
DB_USER=configra_user
DB_PASSWORD=change_me_in_production

# Monitoring
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change_me
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_BUCKET=keystone-backups

# Feature Flags
ENABLE_MONITORING=true
ENABLE_AUTO_BACKUP=true
ENABLE_ALERTS=true
ENABLE_BINARY_AUTHORIZATION=true

# Security
KMS_KEY_NAME=projects/your-project-id/locations/us-central1/keyRings/your-keyring/cryptoKeys/your-key
WIF_PROVIDER=projects/your-project-number/locations/global/workloadIdentityPools/github/providers/github
WIF_SERVICE_ACCOUNT=github-actions@your-project-id.iam.gserviceaccount.com
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
